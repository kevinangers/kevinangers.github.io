                          {% endif %}
                        </a>
                      {% endif %}
                    </p>
                  {% endif %}

                  {% if proj.description %}
                    <div class="entry-description">
                      {{ proj.description | markdownify }}
                    </div>
                  {% endif %}
                </td>
              </tr>
            </tbody>
          </table>
        {%- endfor -%}

        {%- comment -%} Render items with no `order` after the ordered ones {%- endcomment -%}
        {%- for proj in without_order %}
          <table style="padding-top:20px;width:100%;border:0;border-spacing:0;border-collapse:separate;margin:0 auto;">
            <tbody>
              <tr>
                <td style="padding-right:20px;width:20%;vertical-align:middle;">
                  {% if proj.img %}
                    <img src="{{ proj.img | relative_url }}" alt="{{ proj.title }}" style="max-width:160px;height:auto;">
                  {% endif %}
                </td>
                <td width="75%" valign="middle">
                  {% capture proj_title_plain_html %}{{ proj.title | markdownify }}{% endcapture %}
                  {% assign proj_title_plain = proj_title_plain_html | strip | replace: '<p>', '' | replace: '</p>', '' %}
                  <strong>{{ proj_title_plain }}</strong>
                  {% if proj.subheading or proj.project_url %}
                    <p style="font-size:smaller;color:gray;margin:0;">
                      {% if proj.subheading %}
                        {% capture proj_subheading_plain %}{{ proj.subheading | markdownify }}{% endcapture %}
                        {{ proj_subheading_plain | strip | replace: '<p>', '' | replace: '</p>', '' }}
                      {% endif %}
                      {% if proj.subheading and proj.project_url %}
                        <br>
                      {% endif %}
                      {% if proj.project_url %}
                        <a href="{{ proj.project_url }}" target="_blank">
                          {% if proj.url_text %}
                            {% capture proj_url_text_plain %}{{ proj.url_text | markdownify }}{% endcapture %}
                            {{ proj_url_text_plain | strip | replace: '<p>', '' | replace: '</p>', '' }}
                          {% else %}
                            {{ proj.project_url }}
                          {% endif %}
                        </a>
                      {% endif %}
                    </p>
                  {% endif %}
                  {% if proj.description %}
                    <div class="entry-description">
                      {{ proj.description | markdownify }}
                    </div>
                  {% endif %}
                </td>
              </tr>
            </tbody>
          </table>
        {%- endfor -%}
      </div>
    </section>

